// Custom styles.
$main-width = 95%;
$first-color = #FED136;
$second-color = #ffdd68;
$third-color = #ffe690;
$opposite-color = #4339b1;

/* 滚动条 */
::-webkit-scrollbar {
    width: 10px;
    height: 10px;
    background-color: #F5F5F5;
}
::-webkit-scrollbar-thumb {
    border-radius: 10px;
    background-color: #FFF;
    background-image: -webkit-gradient(linear, 40% 0%, 75% 84%, from($third-color), to($first-color), color-stop(.6,$second-color));
}
::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.1);
    background-color: #F5F5F5;
    border-radius: 10px;
}

/* 首页 */
a:hover {
    border-bottom-color: $first-color;
}
.menu .menu-item a:hover {
    background: $third-color;
}
.posts-expand .post-title-link::before {
    background-color: $first-color;
}

/* 详情 */
.main-inner {
    width: $main-width;
}
@media (min-width: 1600px)
    .main-inner
        width $main-width !important;
.header-inner {
    width: $main-width;
}
.footer-inner {
    width: $main-width;
}
.back-to-top, .sidebar-toggle {
    right: 70px;
}

